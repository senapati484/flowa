# Test Postfix Operators (i++, i--)
print("=== Testing Postfix Operators ===\n")

# Test i++
print("--- Postfix Increment (i++) ---")
x = 5
print("x =", x)
old = x++
print("old = x++, old =", old, ", x =", x)

# Test i--
print("\n--- Postfix Decrement (i--) ---")
y = 10
print("y =", y)
old2 = y--
print("old2 = y--, old2 =", old2, ", y =", y)

# Test in expressions
print("\n--- In Expressions ---")
a = 0
result = (a++) + (a++)
print("a started at 0")
print("result = (a++) + (a++) =", result)
print("a is now", a)

# Test in loop
print("\n--- In Loop ---")
count = 0
sum = 0
for(i=0; i<5; i++){
    sum = sum + count++
}
print("sum =", sum, ", count =", count)

print("\nâœ… Postfix operators test completed")
