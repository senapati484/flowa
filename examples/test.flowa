# Comparison
print("Comparison:")
if x < y:
    print("x is less than y")

if y > x:
    print("y is greater than x")

if x == 10:
    print("x is 10")

if x != y:
    print("x is not equal to y")

# Logical
print("Logical:")
if !False:
    print("!False is True")

# Control Flow
print("Control Flow:")
if x > 100:
    print("x is huge")
elif x > 5:
    print("x is moderate")
else:
    print("x is small")

# Functions
print("Functions:")
def add(a, b):
    return a + b

result = add(5, 7)
print(result)

# Async / Spawn / Await
print("Async/Concurrency:")
async def async_task(n):
    return n * 2

# Spawn a task
task = spawn async_task(10)

# Await result
val = await task
print(val)

# Pipelines
print("Pipelines:")
def double(n):
    return n * 2

def increment(n):
    return n + 1

# 5 |> double |> increment -> (5*2) + 1 = 11
res = 5 |> double |> increment
print(res)

# Loops
print("Loops:")
i = 0
while i < 3:
    print(i)
    i = i + 1

print("For Loop:")
for j in range(3):
    print(j)

# Type Definitions
print("Type Definitions:")
